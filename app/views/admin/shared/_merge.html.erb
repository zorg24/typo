<% if @current_user.admin? %>
  <h4>ID of Article you want Merge with</h4> 
  <%= form_tag(form_action, :id => @article.id) do %>
    <div class='editor-left'>
      <%= text_field_tag 'merge_with', '', {:style => 'width: 15%'} %>
      <%= submit_tag "Merge", class: "btn info" %>
    </div>
  <% end %>
<% end %>